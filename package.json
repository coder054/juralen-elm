{
    "name": "juralen-elm",
    "main": "public/electron.js",
    "homepage": "./",
    "author": "Lindsay Wardell",
    "version": "0.0.1",
    "devDependencies": {
        "autoprefixer": "^9.7.4",
        "concurrently": "^5.1.0",
        "create-elm-app": "^4.2.0",
        "cssnano": "^4.1.10",
        "electron": "^8.0.0",
        "electron-builder": "^22.3.2",
        "postcss-cli": "^7.1.0",
        "postcss-nested": "^4.2.1",
        "tailwindcss": "^1.2.0",
        "wait-on": "^4.0.0"
    },
    "scripts": {
        "build": "PUBLIC_URL=./ elm-app build",
        "build:css": "postcss index.postcss -o src/main.css",
        "watch:css": "postcss index.postcss -o src/main.css -w",
        "dev": "concurrently \"elm-app start\" \"wait-on http://localhost:3000 && electron .\"",
        "pack": "electron-builder build"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "electron-is-dev": "^1.1.0",
        "firebase": "^7.8.1",
        "miragejs": "^0.1.33",
        "uuid": "^3.4.0"
    },
    "build": {
        "appId": "com.nan.juralen",
        "files": [
            "node_modules/**/*",
            {
                "from": "build",
                "to": "public",
                "filter": "**/*"
            }
        ],
        "directories": {
            "buildResources": "assets"
        }
    }
}
